<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iristick"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".IriApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Iristick"
        >
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".camera.CameraActivity"
            android:theme="@android:style/Theme.Material.NoActionBar"/>

        <activity android:name=".barcode.BarcodeActivity" />

        <activity android:name=".displaypresentation.DisplayPresentationActivity" />

        <activity android:name=".displaysurface.DisplaySurfaceActivity" />

        <activity android:name=".sensorscube.SensorsCubeActivity"
            android:theme="@android:style/Theme.Material.NoActionBar" />

        <activity android:name=".sensorsreadout.SensorsReadoutActivity"
            android:theme="@android:style/Theme.Material.Light" />

        <activity android:name=".touchpad.TouchpadActivity"
            android:theme="@android:style/Theme.Material.Light" />

    </application>

</manifest>
